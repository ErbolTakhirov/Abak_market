# ==============================================
# GROCERY STORE + WHATSAPP BOT - ENVIRONMENT
# ==============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - PostgreSQL (for production)
DATABASE_NAME=grocery_store
DATABASE_USER=grocery_user
DATABASE_PASSWORD=your-secure-db-password
DATABASE_HOST=db
DATABASE_PORT=5432

# Redis (for production)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# WhatsApp Business API
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_APP_SECRET=your-app-secret

# AI / Speech-to-Text (choose one)
# Option 1: OpenAI
OPENAI_API_KEY=your-openai-api-key

# Option 2: Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/google-cloud-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id

# Cloud Storage (optional)
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=eu-central-1

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Company Info
COMPANY_NAME=Ваш Магазин
COMPANY_PHONE=+7 (999) 123-45-67
COMPANY_ADDRESS=г. Город, ул. Улица, д. 1
COMPANY_WHATSAPP=+79991234567

# Security (for production)
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn
